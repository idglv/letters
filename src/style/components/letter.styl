.letter
    width 40px
    height 40px
    border 1px solid #444
    border-radius 2px
    box-sizing border-box;

    font-size 30px

    display flex
    justify-content center
    align-items center

    transition background .1s ease-in-out

    user-select none
    cursor pointer

    &_disabled
        background #ececec
        color #b7b7b7
        cursor default

    &_active
        &:hover
            background #fff5f5

    &_answer
        width 60px
        height 60px
